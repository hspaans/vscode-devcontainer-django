{
  "image": "ghcr.io/hspaans/python-devcontainer:3.9.0",
  "name": "Python",
  "containerEnv": {
    "PIPENV_VENV_IN_PROJECT": "1"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "appPort": [
    8000
  ],
  "postCreateCommand": "pipenv update",
  "remoteUser": "vscode",
  "extensions": [
    "davidanson.vscode-markdownlint",
    "editorconfig.editorconfig",
    "github.vscode-pull-request-github",
    "ms-python.python",
    "redhat.vscode-yaml"
  ]
}
